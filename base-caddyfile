{
  http_port 80
  https_port 443
  #admin {$HOSTNAME}:2019
  email {$EMAIL}
}
(internal_only) {
  @public {
    not {
      remote_ip {$WAN_IP} {$LAN_RANGE} {$EXTRA}
    }
  }
  handle @public {
    respond "hi"
  }
}
(defaults_nossl) {
  encode zstd gzip
  log {
    output stdout
  }
}
(defaults) {
  tls {$LE_EMAIL}
  encode zstd gzip
  log {
    output stdout
  }
}
(tls) {
  tls {$LE_EMAIL}
  log {
    output stdout
  }
}
(proxy_options) {
  header_up X-Real-IP {remote_host}
  header_up X-Forwarded-Proto {scheme}
}
https://{$ZONE} {
  import defaults
  @public {
    not {
      remote_ip {$LAN_RANGE}
    }
  }
  handle @public {
    root * /www/public
    file_server
  }
  root * /www/internal
  file_server
}

